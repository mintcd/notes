%%%%%                           	MATH ENVIRONMENTS
\setbeamercolor{EnvCol}{bg=gray!20,fg=black} % define a new color theme for the box

\setbeamertemplate{theorems}[numbered]
\setbeamertemplate{blocks}[rounded][shadow=false]
% \makeatletter
% \@addtoreset{theorem}{section}
% % \@addtoreset{definition}{section}
% \makeatother


\renewcommand{\thedefinition}{\thesection.\arabic{definition}}
\BeforeBeginEnvironment{definition}{%
  \setbeamercolor{block title}{fg=white,bg=green!50!black}%
  \setbeamercolor{block body}{fg=black,bg=green!5}%
}

\renewcommand{\thetheorem}{\thesection.\arabic{theorem}}
\newcommand{\thmtitle}[1]{\textbf{#1.}\ }
\BeforeBeginEnvironment{theorem}{%
  \setbeamercolor{block title}{fg=white,bg=red!50!black}%
  \setbeamercolor{block body}{fg=black,bg=red!5}%
}


\BeforeBeginEnvironment{proof}{%
  \setbeamercolor{block title}{fg=black,bg=}% No background
  \setbeamercolor{block body}{fg=black,bg=}% No background
  \renewcommand{\qedsymbol}{\color{black}{$\square$}}
}

\newtheorem{proposition}{Proposition}
\BeforeBeginEnvironment{proposition}{%
  \setbeamercolor{block title}{fg=white,bg=yellow!70!black}%
  \setbeamercolor{block body}{fg=black,bg=yellow!10}%
}
