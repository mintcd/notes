\newcommand{\boxlabel}[2]{
    \sbox{\labelbox}{
        \tcbox[
            colframe=white,
            boxrule=0pt,
            colback=gray!20,
            sharp corners,
            boxsep=0pt,
            left=5pt,
            right=5pt
        ]{\parbox{#2}{\textbf{#1}}}
    }
    \setlength{\mylabelwidth}{\wd\labelbox}
    \usebox{\labelbox}}

